<style>
  h1 {font-family: 'Cinzel', serif}
  a, a:hover, a:focus, a:visited {text-decoration: none;}
  .btn {display: block; width: 100%;}
</style>

<div class="navbar navbar-default navbar-custom navbar-fixed-top affix-top text-center" >
  <h1><%= t('.sign_in') %></h1>
</div>

<div class="container">
  <div class="col-md-4 col-md-offset-4 text-center" style="margin-top: 15em; margin-bottom: 10em;">
    <button type="button" class="btn color-set-FB" style="border-radius: 0px;" >
      <%= link_to "Facebook " + t('.sign_in'), user_facebook_omniauth_authorize_path, class: "color-set-FB" %>
    </button>
    <div style="padding: 1em 0;"></div>
    <button type="button" class="show_register btn color-set1" style="border-radius: 0px;" >
      或是建立一個帳號？
    </button>
  </div>
  <div class="form_for_new_user col-md-4 col-md-offset-4 hidden" style="margin-top: 1em;">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <%# show_error_messages %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "theme_inputbox" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", class: "theme_inputbox" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <em class="pull-right">密碼長度需大於<%= @minimum_password_length %>位</em>
        <br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "theme_inputbox" %>
      </div>
      
      <div class="actions" style="margin-top: 1rem;">
        <%= f.submit t('.sign_up'), class: "theme-btn color-set3" %>
      </div>
    <% end %>

    <%# render "devise/shared/links" %>
  </div>
</div>

